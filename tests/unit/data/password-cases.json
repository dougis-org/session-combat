[
  {
    "description": "Valid strong password with all requirements",
    "password": "SecurePassword123",
    "expectedValid": true,
    "expectedErrors": []
  },
  {
    "description": "Empty password",
    "password": "",
    "expectedValid": false,
    "expectedErrors": [
      "Password must be at least 8 characters long",
      "Password must contain at least one uppercase letter",
      "Password must contain at least one lowercase letter",
      "Password must contain at least one number"
    ]
  },
  {
    "description": "Password shorter than 8 characters",
    "password": "Short1A",
    "expectedValid": false,
    "expectedErrors": [
      "Password must be at least 8 characters long"
    ]
  },
  {
    "description": "Password without uppercase letter",
    "password": "password123",
    "expectedValid": false,
    "expectedErrors": [
      "Password must contain at least one uppercase letter"
    ]
  },
  {
    "description": "Password without lowercase letter",
    "password": "PASSWORD123",
    "expectedValid": false,
    "expectedErrors": [
      "Password must contain at least one lowercase letter"
    ]
  },
  {
    "description": "Password without number",
    "password": "PasswordNoNum",
    "expectedValid": false,
    "expectedErrors": [
      "Password must contain at least one number"
    ]
  },
  {
    "description": "Password with multiple missing requirements",
    "password": "weak",
    "expectedValid": false,
    "expectedErrors": [
      "Password must be at least 8 characters long",
      "Password must contain at least one uppercase letter",
      "Password must contain at least one number"
    ]
  },
  {
    "description": "Password exactly 8 characters long (boundary)",
    "password": "Passwrd1",
    "expectedValid": true,
    "expectedErrors": []
  },
  {
    "description": "Long password meeting all requirements",
    "password": "VeryLongPasswordWith123Numbers",
    "expectedValid": true,
    "expectedErrors": []
  },
  {
    "description": "Password with special characters",
    "password": "Password@123!",
    "expectedValid": true,
    "expectedErrors": []
  },
  {
    "description": "Password with unicode/international characters",
    "password": "Pässwörd123",
    "expectedValid": true,
    "expectedErrors": []
  }
]
